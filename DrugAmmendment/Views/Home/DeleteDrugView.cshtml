
@{
    ViewBag.Title = "Delete Drug";
}

<link href="~/Scripts/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery-ui.js"></script>
<h2 class="col-lg-offset-5">Delete Drug</h2>

    <form action="@Url.Action("DeleteDrug", "Home")" method="post">
        <div class="col-lg-offset-4 col-md-6">
            <label>Delivery: </label>
            <input type="text" name="client" id="client" value="@TempData["Client"]" readonly class="form-control" />
            <label>Criteria Type: </label>
            <input type="text" name="criteriaType" id="criteriaType" value="@TempData["CriteriaType"]" readonly class="form-control" />

            <label>Criteria: </label>
            <input type="text" name="criteria" id="criteria" value="" class="form-control" /><br />

            <input type="submit" name="btnSubmit" id="btnSubmit" value="DELETE DRUG" class="btn btn-primary" onclick="return confirm('Are you sure you want to delete the drug?')" />
        </div>
     </form>

        <style>
            .ui-autocomplete {
                max-height: 150px;
                overflow-y: auto;
                overflow-x: hidden;
                max-width: 700px;
            }
            #mappedData {
                /*color: #002751;
                font-weight:bold;*/
                width: 280px;
            }

            #client, #criteriaType {
                display: none;
            }

            #criteria {
                /*font-size: 16px;*/
                /*color: #002751;
                font-weight: bold;*/
            }
        </style>
<script>
    $(document).ready(function () {
        var data = $('#mappedData').html();
        data = data.substring(data.indexOf(".") + 1);
        data = data.charAt(0).toUpperCase() + data.slice(1);
        if (data == "Mylan_psur") {
            data = "Mylan Non-ICSR";
        }
        else if (data == "Mylan") {
            data = "Mylan ICSR";
        }
        else if (data == "Ranbaxy") {
            data = "Sun Pharma";
        }
        console.log(data);
        $('#mappedData').html(data);
    })
</script>
<script src="~/Scripts/DeleteDrugView.js"></script>